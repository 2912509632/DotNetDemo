<Window x:Class="路径.圆弧实例"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:路径"
        mc:Ignorable="d"
        Title="圆弧实例" Height="300" Width="300">
    <Grid Margin="2,0,-2,0" RenderTransformOrigin="0.497,0.502">
        <Path Stroke="Green" StrokeThickness="3" Margin="14.166,10,-14.166,-10">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="20,150">
                        <ArcSegment Point="250,150" 
                                    Size="100,50"
                                    SweepDirection="Clockwise"
                                    IsLargeArc="True"
                                    RotationAngle="0"
                                    >

                        </ArcSegment>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        <Label Content="StartPoint" HorizontalAlignment="Left" FontSize="7" Margin="10,160,0,0" Foreground="Red" VerticalAlignment="Top" Width="45" Height="20"/>
        <Label Content="Point" HorizontalAlignment="Left" FontSize="7" Margin="250,162,0,0" Foreground="Red" VerticalAlignment="Top" Width="31" Height="20"/>
    </Grid>
</Window>
