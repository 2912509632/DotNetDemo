<Window x:Class="路径.Segment实例"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:路径"
        mc:Ignorable="d"
        Title="Segment实例" Height="200" Width="300">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Path Stroke="Green" StrokeThickness="2" Fill="LawnGreen">
            <Path.Data>
                <PathGeometry>
                    <PathFigure IsClosed="True" StartPoint="0,0">
                        <LineSegment Point="150,0" />
                        <LineSegment Point="150,30" />
                        <LineSegment Point="90,30" />
                        <LineSegment Point="90,150" />
                        <LineSegment Point="60,150" />
                        <LineSegment Point="60,30" />
                        <LineSegment Point="0,30" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
    </Grid>
</Window>
