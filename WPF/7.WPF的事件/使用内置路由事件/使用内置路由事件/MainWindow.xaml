<Window x:Class="使用内置路由事件.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:使用内置路由事件"
        mc:Ignorable="d"
        Title="使用内置路由事件" Height="280" Width="300">
    <Grid x:Name="g_demo" Background="Blue" Button.Click="Btn_Clicked" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Canvas Margin="20" Background="Yellow" Grid.Column="0" >
            <Button Margin="20" Background="Red" Content="Btn_Left" x:Name="Btn_Left" Height="150" Width="55" />
        </Canvas>
        <Canvas Margin="20" Background="Yellow" Grid.Column="1" >
            <Button Margin="20" Background="Red" Content="Btn_Right" x:Name="Btn_Right"  Height="150" Width="55"  />
        </Canvas>
    </Grid>
</Window>
