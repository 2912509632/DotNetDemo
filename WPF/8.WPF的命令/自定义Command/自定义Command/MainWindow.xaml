<Window x:Class="自定义Command.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:自定义Command"
        mc:Ignorable="d"
        Title="使用自定义命令" Height="250" Width="325">
    <StackPanel>
        <local:MiniView x:Name="myView" />
        <local:DiyCommandSource Margin="10" x:Name="clear_val">
            <TextBlock Background="Yellow" Text="清空内容" />
        </local:DiyCommandSource>
    </StackPanel>
</Window>
