<Window x:Class="_8_DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_8_DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <DockPanel LastChildFill="True">
        <TextBox BorderBrush="Red" Height="30" DockPanel.Dock="Top" />
        <TextBox BorderBrush="Red" Width="50" DockPanel.Dock="Left"/>
        <TextBox BorderBrush="Red" />
    </DockPanel>
</Window>
