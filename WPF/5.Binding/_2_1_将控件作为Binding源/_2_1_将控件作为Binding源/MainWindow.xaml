<Window x:Class="_2_1_将控件作为Binding源.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2_1_将控件作为Binding源"
        mc:Ignorable="d"
        Title="MainWindow" Height="110" Width="300">
    <StackPanel>
        <TextBox Text="{Binding Path=Value, ElementName=sli_demo,UpdateSourceTrigger=PropertyChanged}" Margin="5" ></TextBox>
        <Slider Name="sli_demo" Minimum="0" Maximum="100" Margin="5" ></Slider>
    </StackPanel>
</Window>
